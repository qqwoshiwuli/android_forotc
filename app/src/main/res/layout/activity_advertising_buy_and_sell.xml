<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/trans_20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    android:paddingLeft="@dimen/trans_40px"
                    android:paddingRight="@dimen/trans_40px"
                    >

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/trans_20px"
                        android:paddingTop="@dimen/trans_20px"
                        android:text="浮动报价"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_28px"/>

                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                        android:id="@+id/tv_quote_helper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/trans_10px"
                        android:paddingRight="@dimen/trans_30px"
                        android:text="@string/ic_changjianwenti"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_30px"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="@dimen/trans_10px"
                        android:text="@string/ic_shuangxiangjiantou"
                        android:textColor="@color/color_blue_dark"
                        android:textSize="@dimen/text_trans_24px"/>


                    <CheckBox
                        android:id="@+id/tv_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:gravity="center"
                        android:text="切换至固定报价模式"
                        android:textColor="@color/color_blue_dark"
                        android:textSize="@dimen/text_trans_24px"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_premium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_1px"
                        android:layout_marginLeft="@dimen/trans_40px"
                        android:layout_marginRight="@dimen/trans_40px"
                        android:background="@color/color_e5e5e5"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/trans_40px"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/trans_20px"
                            android:paddingTop="@dimen/trans_20px"
                            android:text="溢\u0020 价\u0020 比"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_28px"/>


                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>


                        <ImageView
                            android:id="@+id/tv_subtract"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_25px"
                            android:paddingRight="@dimen/trans_25px"
                            app:srcCompat="@drawable/ic_yijia02"
                            />


                        <EditText
                            android:id="@+id/et_premium"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:inputType="numberSigned|numberDecimal"
                            android:maxLength="8"
                            android:paddingLeft="@dimen/trans_20px"
                            android:paddingRight="@dimen/trans_20px"
                            android:text="5.23"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_24px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="%"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_24px"/>

                        <ImageView
                            android:id="@+id/tv_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_25px"
                            android:paddingRight="@dimen/trans_25px"
                            app:srcCompat="@drawable/ic_yijia01"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <com.fivefivelike.mybaselibrary.view.IconFontTextview
                            android:id="@+id/tv_premium_helper"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_40px"
                            android:paddingRight="@dimen/trans_40px"

                            android:text="@string/ic_changjianwenti"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_30px"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_1px"
                android:layout_marginLeft="@dimen/trans_40px"
                android:layout_marginRight="@dimen/trans_40px"
                android:background="@color/color_e5e5e5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/trans_20px"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/trans_40px"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/trans_20px"
                        android:paddingTop="@dimen/trans_20px"
                        android:text="单\u3000\u3000价"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_28px"/>

                    <EditText
                        android:id="@+id/et_unit_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:hint="请输入单价"
                        android:inputType="number"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_30px"/>

                    <TextView
                        android:id="@+id/tv_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="@dimen/trans_20px"
                        android:text="CNY"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_24px"/>

                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                        android:id="@+id/tv_currency_helper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/trans_40px"
                        android:paddingRight="@dimen/trans_40px"
                        android:text="@string/ic_changjianwenti"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_30px"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_upper_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_1px"
                        android:layout_marginLeft="@dimen/trans_40px"
                        android:layout_marginRight="@dimen/trans_40px"
                        android:background="@color/color_e5e5e5"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/trans_40px"
                        >

                        <TextView
                            android:id="@+id/tv_floor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/trans_20px"
                            android:paddingTop="@dimen/trans_20px"
                            android:text="价格上限"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_28px"/>

                        <EditText
                            android:id="@+id/et_upper_limit_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="center"
                            android:hint="非必填"
                            android:inputType="numberDecimal"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_30px"/>

                        <TextView
                            android:id="@+id/tv_upper_limit_currency"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/trans_20px"
                            android:text="CNY"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_24px"/>

                        <com.fivefivelike.mybaselibrary.view.IconFontTextview
                            android:id="@+id/tv_upper_limit_helper"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_40px"
                            android:paddingRight="@dimen/trans_40px"
                            android:text="@string/ic_changjianwenti"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_30px"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="@color/color_f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/trans_20px"
                android:paddingTop="@dimen/trans_20px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/trans_40px"
                    >

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/trans_30px"
                        android:gravity="center"
                        android:paddingBottom="@dimen/trans_20px"
                        android:paddingTop="@dimen/trans_20px"
                        android:text="买\u0020 入\u0020 量"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_28px"/>

                    <EditText
                        android:id="@+id/et_amount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="买入金额"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:maxLength="8"
                        android:paddingLeft="@dimen/trans_10px"
                        android:paddingRight="@dimen/trans_10px"
                        android:textColor="@color/color_font3"
                        android:textSize="@dimen/text_trans_24px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CNY"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_24px"/>

                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="@dimen/trans_10px"
                        android:text="@string/ic_shuangxiangjiantou"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_24px"/>

                    <EditText
                        android:id="@+id/et_btc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="买入数量"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:maxLength="8"
                        android:paddingLeft="@dimen/trans_10px"
                        android:paddingRight="@dimen/trans_10px"
                        android:textColor="@color/color_font3"
                        android:textSize="@dimen/text_trans_24px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="BTC"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_24px"/>

                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                        android:id="@+id/tv_buy_helper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="@dimen/trans_20px"
                        android:paddingRight="@dimen/trans_40px"

                        android:text="@string/ic_changjianwenti"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_30px"/>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_starting_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_1px"
                        android:layout_marginLeft="@dimen/trans_40px"
                        android:layout_marginRight="@dimen/trans_40px"
                        android:background="@color/color_e5e5e5"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/trans_40px"
                        >

                        <TextView
                            android:id="@+id/tv_starting_buy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/trans_30px"
                            android:gravity="center"
                            android:paddingBottom="@dimen/trans_20px"
                            android:paddingTop="@dimen/trans_20px"
                            android:text="最低买入"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_28px"/>

                        <EditText
                            android:id="@+id/et_starting_buy"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:hint="每笔交易的最小额度"
                            android:inputType="numberDecimal"
                            android:paddingLeft="@dimen/trans_10px"
                            android:paddingRight="@dimen/trans_20px"
                            android:textColor="@color/color_font1"
                            android:textColorHint="@color/color_font4"
                            android:textSize="@dimen/text_trans_24px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="CNY"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_24px"/>

                        <com.fivefivelike.mybaselibrary.view.IconFontTextview
                            android:id="@+id/tv_starting_buy_helper"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_20px"
                            android:paddingRight="@dimen/trans_40px"
                            android:text="@string/ic_changjianwenti"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_30px"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="@color/color_f5f5f5"/>


            <LinearLayout
                android:id="@+id/lin_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/trans_20px"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/trans_40px"
                    android:paddingRight="@dimen/trans_40px"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/trans_30px"
                        android:paddingRight="@dimen/trans_10px"
                        android:paddingTop="@dimen/trans_30px"
                        android:text="选择收款账号"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_28px"/>

                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                        android:id="@+id/tv_account_helper"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingRight="@dimen/trans_30px"
                        android:text="@string/ic_changjianwenti"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_28px"/>

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <com.fivefivelike.mybaselibrary.view.IconFontTextview
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingRight="@dimen/trans_10px"
                        android:text="@string/ic_guanli"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_24px"/>

                    <TextView
                        android:id="@+id/tv_administer_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="管理收款账户"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_24px"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_1px"
                    android:layout_marginLeft="@dimen/trans_40px"
                    android:layout_marginRight="@dimen/trans_40px"
                    android:background="@color/color_e5e5e5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/trans_40px"
                    android:paddingRight="@dimen/trans_40px"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="您当前还没有添加过收款账户，"
                        android:textColor="@color/color_font3"
                        android:textSize="@dimen/text_trans_28px"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/trans_25px"
                        android:paddingTop="@dimen/trans_25px"
                        android:text="点击添加"
                        android:textColor="@drawable/color_blue_dark"
                        android:textSize="@dimen/text_trans_28px"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/trans_20px"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_20px"
                    android:background="@color/color_f5f5f5"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lin_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/trans_40px"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="@dimen/trans_20px"
                            android:paddingTop="@dimen/trans_20px"
                            android:text="收币地址"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_28px"/>

                        <TextView
                            android:id="@+id/tv_addressr"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="right|center_vertical"
                            android:paddingLeft="@dimen/trans_20px"
                            android:paddingRight="@dimen/trans_20px"
                            android:text="地址"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_24px"/>

                        <com.fivefivelike.mybaselibrary.view.IconFontTextview
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:gravity="center"
                            android:rotation="-90"
                            android:text="@string/ic_zhankai"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_24px"
                            />

                        <com.fivefivelike.mybaselibrary.view.IconFontTextview
                            android:id="@+id/tv_address_helper"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_20px"
                            android:paddingRight="@dimen/trans_40px"

                            android:text="@string/ic_changjianwenti"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_30px"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_1px"
                        android:layout_marginLeft="@dimen/trans_40px"
                        android:layout_marginRight="@dimen/trans_40px"
                        android:background="@color/color_e5e5e5"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/trans_40px"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/trans_40px"
                            android:gravity="center"
                            android:paddingBottom="@dimen/trans_20px"
                            android:paddingTop="@dimen/trans_20px"

                            android:text="开放时间"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_28px"/>

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="点击选择开放时间"
                            android:textColor="@color/color_font3"
                            android:textSize="@dimen/text_trans_24px"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="可购买"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_24px"/>

                        <com.fivefivelike.mybaselibrary.view.IconFontTextview
                            android:id="@+id/tv_time_helper"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_20px"
                            android:paddingRight="@dimen/trans_40px"
                            android:text="@string/ic_changjianwenti"
                            android:textColor="@color/color_font1"
                            android:textSize="@dimen/text_trans_30px"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_20px"
                        android:background="@color/color_f5f5f5"/>
                </LinearLayout>

            </LinearLayout>


            <EditText
                android:id="@+id/et_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="top|left"
                android:hint="可以在这里留言对卖家说点什么。请勿在留言中直接透露联系方式，避免隐私泄露。"
                android:maxLength="100"
                android:minHeight="@dimen/trans_260px"
                android:padding="@dimen/trans_40px"
                android:textColor="@color/color_font1"
                android:textColorHint="@color/color_font4"
                android:textSize="@dimen/text_trans_24px"/>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/layout_bottom_commit"/>
</LinearLayout>
