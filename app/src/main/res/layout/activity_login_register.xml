<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar"/>


    <com.fivefivelike.mybaselibrary.view.IconFontTextview
        android:id="@+id/tv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/trans_50px"
        android:gravity="bottom"
        android:paddingTop="@dimen/trans_30px"
        android:text="@string/ic_logo2"
        android:textColor="@color/color_blue"
        android:textSize="@dimen/text_trans_60px"/>

    <LinearLayout
        android:id="@+id/lin_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/trans_80px"
        android:paddingLeft="@dimen/trans_40px"
        android:paddingRight="@dimen/trans_40px"
        android:paddingTop="@dimen/trans_50px"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_25px"

            android:paddingTop="@dimen/trans_5px">

            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/ic_user2"
                android:textColor="@color/color_cccccc"
                android:textSize="@dimen/text_trans_30px"/>


            <com.gqfbtc.widget.TextInputClearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="请输入注册用的手机号"
                    android:inputType="textEmailAddress"
                    android:maxLength="20"
                    android:padding="@dimen/trans_20px"
                    android:textColor="@color/color_font1"
                    android:textColorHint="@color/color_font4"
                    android:textSize="@dimen/text_trans_30px"/>


            </com.gqfbtc.widget.TextInputClearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:background="@color/color_e5e5e5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_25px"
            android:paddingTop="@dimen/trans_5px"

            >

            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="@string/ic_mima"
                android:textColor="@color/color_cccccc"
                android:textSize="@dimen/text_trans_30px"/>


            <com.gqfbtc.widget.TextInputClearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="请输入注册用的密码"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:padding="@dimen/trans_20px"
                    android:textColor="@color/color_font1"
                    android:textColorHint="@color/color_font4"
                    android:textSize="@dimen/text_trans_30px"/>


            </com.gqfbtc.widget.TextInputClearLayout>

            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                android:id="@+id/tv_login_show"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/trans_20px"
                android:paddingRight="@dimen/trans_20px"
                android:text="@string/ic_eye"
                android:textColor="@color/color_cccccc"
                android:textSize="@dimen/text_trans_30px"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:background="@color/color_e5e5e5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/trans_40px"
        android:paddingRight="@dimen/trans_40px"
        android:paddingTop="@dimen/trans_50px"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_25px"
            android:paddingTop="@dimen/trans_5px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="邮箱"
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_30px"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <com.gqfbtc.widget.TextInputClearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_register_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="设置邮箱以便接受交易动态"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/trans_20px"
                        android:paddingTop="@dimen/trans_20px"
                        android:textColor="@color/color_font1"
                        android:textColorHint="@color/color_font4"
                        android:textSize="@dimen/text_trans_30px"/>


                </com.gqfbtc.widget.TextInputClearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:background="@color/color_e5e5e5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_25px"

            android:paddingTop="@dimen/trans_5px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_30px"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">

                <com.gqfbtc.widget.TextInputClearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/et_register_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:hint="请输入正确的手机号"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="20"
                        android:paddingBottom="@dimen/trans_20px"
                        android:paddingTop="@dimen/trans_20px"
                        android:textColor="@color/color_font1"
                        android:textColorHint="@color/color_font4"
                        android:textSize="@dimen/text_trans_30px"/>


                </com.gqfbtc.widget.TextInputClearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:background="@color/color_e5e5e5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_25px"

            android:paddingTop="@dimen/trans_5px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="验证码"
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_30px"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/et_register_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:hint="点击获取验证码"
                    android:inputType="number"
                    android:lines="1"
                    android:maxLength="10"
                    android:paddingBottom="@dimen/trans_20px"
                    android:paddingTop="@dimen/trans_20px"
                    android:textColor="@color/color_font1"
                    android:textColorHint="@color/color_font4"
                    android:textSize="@dimen/text_trans_30px"/>


                <com.gqfbtc.widget.SingleLineZoomTextView
                    android:id="@+id/tv_register_get_code"
                    android:layout_width="@dimen/trans_140px"
                    android:layout_height="@dimen/trans_60px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/trans_20px"
                    android:background="@drawable/select_code_bg"
                    android:gravity="center"
                    android:paddingLeft="@dimen/trans_20px"
                    android:paddingRight="@dimen/trans_20px"
                    android:text="立即获取"
                    android:textColor="@drawable/color_code"
                    android:textSize="@dimen/text_trans_24px"/>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:background="@color/color_e5e5e5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_25px"

            android:paddingTop="@dimen/trans_5px">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="密码"
                android:textColor="@color/color_font2"
                android:textSize="@dimen/text_trans_30px"/>


            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">


                <EditText
                    android:id="@+id/et_register_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:hint="6-20位数字或字母"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="16"
                    android:paddingBottom="@dimen/trans_20px"
                    android:paddingTop="@dimen/trans_20px"
                    android:textColor="@color/color_font1"
                    android:textColorHint="@color/color_font4"
                    android:textSize="@dimen/text_trans_30px"/>


                <com.fivefivelike.mybaselibrary.view.IconFontTextview
                    android:id="@+id/tv_register_show"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/trans_20px"
                    android:gravity="center"
                    android:paddingLeft="@dimen/trans_20px"
                    android:paddingRight="@dimen/trans_20px"
                    android:text="@string/ic_eye"
                    android:textColor="@color/color_cccccc"
                    android:textSize="@dimen/text_trans_30px"/>

            </FrameLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_1px"
            android:background="@color/color_e5e5e5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/trans_5px"
            android:paddingLeft="@dimen/trans_25px"
            android:paddingTop="@dimen/trans_5px">

            <LinearLayout
                android:id="@+id/lin_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_check"
                    android:layout_width="@dimen/trans_24px"
                    android:layout_height="@dimen/trans_24px"
                    android:background="@drawable/select_check_forms"
                    android:button="@null"
                    android:clickable="false"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/trans_10px"
                    android:layout_marginTop="@dimen/trans_10px"
                    android:clickable="false"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/trans_20px"
                    android:paddingLeft="@dimen/trans_10px"
                    android:paddingTop="@dimen/trans_20px"
                    android:text="已阅读并同意"
                    android:textColor="@color/color_font3"
                    android:textSize="@dimen/text_trans_24px"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_protocol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/trans_10px"
                android:layout_marginTop="@dimen/trans_10px"
                android:gravity="center"
                android:paddingBottom="@dimen/trans_20px"
                android:paddingTop="@dimen/trans_20px"
                android:text="《FOROTC用户协议》"
                android:textColor="@drawable/color_blue_dark"
                android:textSize="@dimen/text_trans_24px"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/trans_80px"
        android:paddingLeft="@dimen/trans_40px"
        android:paddingRight="@dimen/trans_40px"
        android:paddingTop="@dimen/trans_50px"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_other_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/trans_40px"
            android:paddingLeft="@dimen/trans_25px"
            android:text="请验证手机号"
            android:textColor="@color/color_font1"
            android:textSize="@dimen/text_trans_28px"/>

        <LinearLayout
            android:id="@+id/lin_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trans_5px"
                android:paddingLeft="@dimen/trans_25px"
                android:paddingTop="@dimen/trans_5px">

                <TextView
                    android:id="@+id/tv_ettitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_30px"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <com.gqfbtc.widget.TextInputClearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/et_other_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="请输入手机号"
                            android:lines="1"
                            android:maxLength="20"
                            android:paddingBottom="@dimen/trans_20px"
                            android:paddingTop="@dimen/trans_20px"
                            android:textColor="@color/color_font1"
                            android:textColorHint="@color/color_font4"
                            android:textSize="@dimen/text_trans_30px"/>


                    </com.gqfbtc.widget.TextInputClearLayout>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_1px"
                android:background="@color/color_e5e5e5"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_other_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/trans_5px"
                android:paddingLeft="@dimen/trans_25px"

                android:paddingTop="@dimen/trans_5px">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="验证码"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_30px"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/et_other_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="点击获取验证码"
                        android:lines="1"
                        android:maxLength="10"

                        android:paddingBottom="@dimen/trans_20px"
                        android:paddingTop="@dimen/trans_20px"
                        android:textColor="@color/color_font1"
                        android:textColorHint="@color/color_font4"
                        android:textSize="@dimen/text_trans_30px"/>


                    <com.gqfbtc.widget.SingleLineZoomTextView
                        android:id="@+id/tv_other_get_code"
                        android:layout_width="@dimen/trans_140px"
                        android:layout_height="@dimen/trans_60px"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/trans_20px"
                        android:background="@drawable/select_code_bg"
                        android:gravity="center"
                        android:paddingLeft="@dimen/trans_20px"
                        android:paddingRight="@dimen/trans_20px"
                        android:text="立即获取"
                        android:textColor="@drawable/color_code"
                        android:textSize="@dimen/text_trans_24px"/>

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_1px"
                android:background="@color/color_e5e5e5"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/trans_40px"
        android:layout_marginRight="@dimen/trans_40px"
        android:background="@drawable/select_blue_radiu"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/trans_20px"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/text_trans_32px"/>

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/trans_40px"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/trans_20px"
        android:text="忘记了密码？"
        android:textColor="@drawable/color_blue_dark"
        android:textSize="@dimen/text_trans_24px"
        android:visibility="gone"/>


    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_bottom_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/trans_70px"
        android:clickable="true"
        android:padding="@dimen/trans_20px"
        android:text="还没有账号?立即注册"
        android:textColor="@color/color_font1"
        android:textSize="@dimen/trans_24px"
        android:visibility="gone"/>


</LinearLayout>