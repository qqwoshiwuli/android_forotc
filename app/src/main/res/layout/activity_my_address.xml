<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/include_toolbar_with_statusbar"/>

        <com.gqfbtc.widget.CommonTabLayout
            android:id="@+id/tl_2"
            android:layout_width="@dimen/trans_300px"
            android:layout_height="@dimen/trans_90px"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            tl:tl_indicator_color="@color/color_blue"
            tl:tl_indicator_height="@dimen/trans_5px"
            tl:tl_indicator_margin_bottom="@dimen/trans_5px"
            tl:tl_indicator_width="@dimen/trans_50px"
            tl:tl_textSelectColor="@color/color_font1"
            tl:tl_textUnselectColor="@color/color_font2"
            tl:tl_textsize="@dimen/text_trans_28px"
            tl:tl_underline_color="#1A000000"
            tl:tl_underline_height="0dp"
            />

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_address"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <include layout="@layout/layout_bottom_commit"/>

</LinearLayout>