<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/trans_30px"
              android:paddingLeft="@dimen/trans_40px"
              android:paddingRight="@dimen/trans_40px"
              android:paddingTop="@dimen/trans_30px">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.fivefivelike.mybaselibrary.view.IconFontTextview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/trans_5px"
            android:text="@string/btc_m"
            android:textColor="@color/color_font2"
            android:textSize="@dimen/text_trans_28px"/>


        <TextView
            android:id="@+id/tv_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.21"
            android:lines="1"
            android:text="10.23212562"
            android:textColor="@color/color_font2"
            android:textSize="@dimen/text_trans_24px"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:lines="1"
        android:text="2017-09-21 22:00:00"
        android:textColor="@color/color_font2"
        android:textSize="@dimen/text_trans_24px"/>

    <TextView
        android:id="@+id/tv_statu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="成功"
        android:textColor="@color/color_font2"
        android:textSize="@dimen/text_trans_24px"/>

</LinearLayout>