<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="@dimen/trans_40px"
              android:paddingRight="@dimen/trans_40px"
              android:paddingTop="@dimen/trans_30px">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_pic"
            android:layout_width="@dimen/trans_100px"
            android:layout_height="@dimen/trans_100px"
            android:layout_marginRight="@dimen/trans_30px"
            android:src="@color/color_blue"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/trans_45px"
                    android:layout_gravity="top"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.gqfbtc.widget.SingleLineZoomTextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:paddingRight="@dimen/trans_10px"
                        android:singleLine="true"
                        android:text="dasda"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_26px"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="bottom|right"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/trans_30px">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|right"
                        android:includeFontPadding="false"
                        android:text="2200"
                        android:textColor="@color/color_44c745"
                        android:textSize="@dimen/text_trans_32px"/>

                    <TextView
                        android:id="@+id/tv_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingLeft="@dimen/trans_10px"
                        android:text="CNY"
                        android:textColor="@color/color_44c745"
                        android:textSize="@dimen/text_trans_20px"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <com.gqfbtc.widget.SingleLineZoomTextView
                        android:id="@+id/tv_sell_type"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/trans_34px"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/trans_20px"
                        android:text="限额"
                        android:textColor="@color/color_font2"
                        android:textSize="@dimen/text_trans_24px"/>


                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/trans_15px"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">



                        <ImageView
                            android:id="@+id/iv_jisu"
                            android:layout_width="@dimen/trans_40px"
                            android:layout_height="@dimen/trans_20px"
                            android:layout_marginLeft="@dimen/trans_6px"
                            android:layout_marginRight="@dimen/trans_6px"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_jisu"
                            />

                        <ImageView
                            android:id="@+id/iv_dahu"
                            android:layout_width="@dimen/trans_60px"
                            android:layout_height="@dimen/trans_20px"
                            android:layout_marginLeft="@dimen/trans_6px"
                            android:layout_marginRight="@dimen/trans_12px"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_dahui"
                            />
                        <ImageView
                            android:layout_width="@dimen/trans_60px"
                            android:layout_height="@dimen/trans_20px"
                            android:layout_marginRight="@dimen/trans_6px"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_icon_pay15"
                            />

                        <ImageView
                            android:layout_width="@dimen/trans_60px"
                            android:layout_height="@dimen/trans_20px"
                            android:layout_marginLeft="@dimen/trans_6px"
                            android:layout_marginRight="@dimen/trans_6px"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ic_icon_pay14"
                            />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_buy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/trans_40px">

                    <TextView
                        android:id="@+id/tv_buy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/select_advertising_btn"
                        android:gravity="center"
                        android:paddingBottom="@dimen/trans_8px"
                        android:paddingLeft="@dimen/trans_40px"
                        android:paddingRight="@dimen/trans_40px"
                        android:paddingTop="@dimen/trans_6px"
                        android:text="购买"
                        android:textColor="@color/color_blue"
                        android:textSize="@dimen/text_trans_30px"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_1px"
        android:layout_marginTop="@dimen/trans_30px"
        android:background="@color/color_e5e5e5"/>

</LinearLayout>