<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar_with_statusbar"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_toast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/trans_40px"
                android:text="交易完成了，来评价一下买家爱喝担保方吧！您的评价将为其他用户提供参考~"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_28px"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="@color/color_f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/trans_20px"
                    android:paddingLeft="@dimen/trans_40px"
                    android:paddingRight="@dimen/trans_40px"
                    android:paddingTop="@dimen/trans_20px">

                    <View
                        android:layout_width="@dimen/trans_10px"
                        android:layout_height="@dimen/trans_35px"
                        android:layout_marginLeft="@dimen/trans_5px"
                        android:layout_marginRight="@dimen/trans_20px"
                        android:background="@color/color_blue"/>


                    <TextView
                        android:id="@+id/tv_first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="评价买家"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_30px"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_1px"
                    android:layout_marginLeft="@dimen/trans_40px"
                    android:layout_marginRight="@dimen/trans_40px"
                    android:background="@color/color_e5e5e5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/trans_40px">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/trans_20px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_15px"
                            android:paddingRight="@dimen/trans_60px"
                            android:text="评分"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/text_trans_30px"/>


                        <com.gqfbtc.widget.RatingBar
                            android:id="@+id/rb_seller"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:starCount="5"
                            app:clickable="true"
                            app:starEmpty="@drawable/ic_star_dark"
                            app:starFill="@drawable/ic_star_light"
                            app:starImageHeight="@dimen/trans_65px"
                            app:starImagePadding="@dimen/trans_20px"
                            app:starImageWidth="@dimen/trans_65px"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/trans_15px"
                            android:paddingRight="@dimen/trans_60px"
                            android:paddingTop="@dimen/trans_30px"
                            android:text="评论"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/text_trans_30px"/>

                        <EditText
                            android:id="@+id/et_seller"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="top|left"
                            android:hint="说点什么"
                            android:minHeight="@dimen/text_trans_150px"
                            android:paddingTop="@dimen/trans_30px"
                            android:textColor="@color/color_font1"
                            android:textColorHint="@color/color_font4"
                            android:textSize="@dimen/text_trans_30px"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/trans_20px"
                android:background="@color/color_f5f5f5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/trans_20px"
                    android:paddingLeft="@dimen/trans_40px"
                    android:paddingRight="@dimen/trans_40px"
                    android:paddingTop="@dimen/trans_20px">

                    <View
                        android:layout_width="@dimen/trans_10px"
                        android:layout_height="@dimen/trans_35px"
                        android:layout_marginLeft="@dimen/trans_5px"
                        android:layout_marginRight="@dimen/trans_20px"
                        android:background="@color/color_blue"/>


                    <TextView
                        android:id="@+id/tv_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="评价担保方"
                        android:textColor="@color/color_font1"
                        android:textSize="@dimen/text_trans_30px"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/trans_1px"
                    android:layout_marginLeft="@dimen/trans_40px"
                    android:layout_marginRight="@dimen/trans_40px"
                    android:background="@color/color_e5e5e5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/trans_40px">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/trans_20px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="@dimen/trans_15px"
                            android:paddingRight="@dimen/trans_60px"
                            android:text="评分"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/text_trans_30px"/>


                        <com.gqfbtc.widget.RatingBar
                            android:id="@+id/rb_guarantor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            app:starCount="5"
                            app:clickable="true"

                            app:starEmpty="@drawable/ic_star_dark"
                            app:starFill="@drawable/ic_star_light"
                            app:starImageHeight="@dimen/trans_65px"
                            app:starImagePadding="@dimen/trans_20px"
                            app:starImageWidth="@dimen/trans_65px"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/trans_15px"
                            android:paddingRight="@dimen/trans_60px"
                            android:paddingTop="@dimen/trans_30px"
                            android:text="评论"
                            android:textColor="@color/color_font2"
                            android:textSize="@dimen/text_trans_30px"/>

                        <EditText
                            android:id="@+id/et_guarantor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:gravity="top|left"
                            android:hint="说点什么"
                            android:minHeight="@dimen/text_trans_150px"
                            android:paddingTop="@dimen/trans_30px"
                            android:textColor="@color/color_font1"
                            android:textColorHint="@color/color_font4"
                            android:textSize="@dimen/text_trans_30px"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/trans_40px"
                android:background="@drawable/select_blue_radiu"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/trans_25px"
                android:text="提交评价"
                android:textColor="@color/white"
                android:textSize="@dimen/text_trans_32px"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
