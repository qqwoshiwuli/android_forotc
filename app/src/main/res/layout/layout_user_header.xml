<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/trans_55px"
        android:paddingRight="@dimen/trans_40px"
        android:paddingTop="@dimen/trans_40px">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_pic"
            android:layout_width="@dimen/trans_125px"
            android:layout_height="@dimen/trans_125px"
            android:layout_marginRight="@dimen/trans_40px"
            android:src="@color/color_44c745"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="郭青枫"
                    android:textColor="@color/color_font1"
                    android:textSize="@dimen/text_trans_28px"
                    android:textStyle="bold"/>


                <ImageView
                    android:id="@+id/iv_real_name"
                    android:layout_width="@dimen/trans_100px"
                    android:layout_height="@dimen/trans_30px"
                    android:layout_marginLeft="@dimen/trans_20px"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_certification01"
                    />


            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="@dimen/trans_30px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="交易 4"
                    android:textColor="@color/color_font2"
                    android:textSize="@dimen/text_trans_24px"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/trans_20px"
        android:layout_marginTop="@dimen/trans_40px"
        android:background="@color/color_f5f5f5"/>

    <LinearLayout
        android:id="@+id/lin_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/trans_40px"
            android:paddingRight="@dimen/trans_40px"
            >


            <com.fivefivelike.mybaselibrary.view.IconFontTextview
                android:id="@+id/tv_pic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/trans_10px"
                android:layout_marginRight="@dimen/trans_25px"
                android:gravity="center"
                android:text="@string/ic_qianbao"
                android:textColor="@color/color_font1"
                android:textSize="@dimen/text_trans_35px"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/trans_10px"
                    android:paddingBottom="@dimen/trans_25px"
                    android:paddingTop="@dimen/trans_25px"
                    android:text="中介在线设置"
                    android:textColor="@color/color_font1"
                    android:textSize="@dimen/text_trans_32px"
                    />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/checkbox"
                style="@style/SwitchButtonStyle"
                android:layout_width="@dimen/trans_70px"
                android:layout_height="@dimen/trans_80px"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:checked="false"
                app:kswAnimationDuration="300"
                app:kswBackDrawable="@drawable/ios_back_drawable"
                app:kswBackMeasureRatio="1.4"
                app:kswThumbDrawable="@drawable/ios_thumb_selector"
                app:kswThumbMarginBottom="-8dp"
                app:kswThumbMarginLeft="-5dp"
                app:kswThumbMarginRight="-5dp"
                app:kswThumbMarginTop="-2.5dp"/>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/trans_20px"
            android:background="@color/color_f5f5f5"/>
    </LinearLayout>

</LinearLayout>